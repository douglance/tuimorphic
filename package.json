{
  "name": "tuimorphic",
  "version": "0.2.0",
  "description": "Terminal-aesthetic React components built on Base UI with SRCL styling",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    },
    "./styles.css": "./dist/styles.css"
  },
  "files": [
    "dist"
  ],
  "sideEffects": [
    "**/*.css"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:demo": "tsc && vite build --config vite.config.demo.ts",
    "preview": "vite preview",
    "preview:demo": "vite preview --config vite.config.demo.ts",
    "lint": "tsc --noEmit",
    "deploy": "pnpm build:demo && wrangler pages deploy dist-demo --project-name tuimorphic"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "dependencies": {
    "@base-ui/react": "^1.0.0-beta.0",
    "react-router-dom": "^7.10.1"
  },
  "devDependencies": {
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.0",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "sass": "^1.77.0",
    "typescript": "^5.5.0",
    "vite": "^5.4.0",
    "vite-plugin-dts": "^4.0.0",
    "vite-plugin-static-copy": "^3.1.4",
    "wawoff2": "^2.0.1"
  },
  "keywords": [
    "react",
    "components",
    "terminal",
    "tui",
    "base-ui",
    "srcl",
    "monospace"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/douglance/tuimorphic"
  }
}
